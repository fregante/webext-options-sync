{
  "name": "webext-options-sync",
  "version": "0.16.0",
  "description": "Helps you manage and autosave your extension's options.",
  "license": "MIT",
  "repository": "bfred-it/webext-options-sync",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "browser",
    "extension",
    "options",
    "sync",
    "webext",
    "chrome",
    "firefox"
  ],
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "run-p --silent build test:*",
    "test:lint": "xo",
    "prepublish-only": "run-p --silent build",
    "build:comment": "echo '// https://github.com/bfred-it/webext-options-sync\n'",
    "build:standalone": "browserify source/index.ts --standalone OptionsSync -p tsify",
    "build": "tsc && run-s build:* --silent > webext-options-sync.js",
    "watch": "tsc --watch"
  },
  "xo": {
    "ignores": [
      "webext-options-sync.js"
    ],
    "extensions": [
      "ts"
    ],
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "comma-dangle": [
        0,
        "only-multiline"
      ]
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript",
        "rules": {
          "@typescript-eslint/no-namespace": 0
        }
      }
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.3.0",
    "@types/chrome": "0.0.86",
    "@types/dom-inputevent": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "browserify": "^16.2.3",
    "eslint-config-xo-typescript": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "tsify": "^4.0.1",
    "typescript": "^3.5.1",
    "xo": "*"
  }
}
