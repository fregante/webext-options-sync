{
  "name": "webext-options-sync",
  "version": "0.15.4",
  "description": "Helps you manage and autosave your extension's options.",
  "license": "MIT",
  "repository": "bfred-it/webext-options-sync",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "browser",
    "extension",
    "options",
    "sync",
    "webext",
    "chrome",
    "firefox"
  ],
  "main": "webext-options-sync.js",
  "files": [
    "webext-options-sync.js",
    "index.d.ts"
  ],
  "scripts": {
    "watch": "onchange '*.js' --initial -- xo --fix",
    "test": "xo"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "comma-dangle": [
        0,
        "only-multiline"
      ]
    }
  },
  "devDependencies": {
    "onchange": "^3.3.0",
    "xo": "*"
  }
}
