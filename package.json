{
  "name": "webext-options-sync",
  "version": "1.2.0",
  "description": "Helps you manage and autosave your extension's options.",
  "keywords": [
    "browser",
    "chrome",
    "extension",
    "firefox",
    "options",
    "sync",
    "webext"
  ],
  "repository": "fregante/webext-options-sync",
  "license": "MIT",
  "author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "tsc && ava --verbose --serial && xo",
    "watch": "tsc --watch",
    "watch:test": "ava --verbose --serial --watch"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ],
    "extensions": [
      "ts"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript",
        "rules": {
          "@typescript-eslint/no-dynamic-delete": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ],
    "rules": {
      "import/no-unresolved": "warn",
      "import/no-unassigned-import": "off"
    }
  },
  "dependencies": {
    "dom-form-serializer": "^1.0.7",
    "lz-string": "^1.4.4",
    "throttle-debounce": "^2.1.0",
    "webext-detect-page": "^1.0.2"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.6.0",
    "@types/chrome": "0.0.91",
    "@types/dom-inputevent": "^1.0.5",
    "@types/lz-string": "^1.3.33",
    "@types/throttle-debounce": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "ava": "^2.2.0",
    "eslint-config-xo-typescript": "^0.22.0",
    "esm": "^3.2.25",
    "sinon": "^7.3.2",
    "sinon-chrome": "^3.0.1",
    "type-fest": "^0.8.1",
    "typescript": "^3.7.2",
    "xo": "*"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "type": "module"
}
